{
  "name": "jaylink-backend",
  "version": "1.0.0",
  "description": "Backend server for JayLink SMS and Voice Messaging Platform",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --runInBand",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "migrate:undo:all": "npx sequelize-cli db:migrate:undo:all",
    "migrate:status": "npx sequelize-cli db:migrate:status",
    "migrate:generate": "npx sequelize-cli migration:generate --name",
    "migrate:production": "cross-env NODE_ENV=production npx sequelize-cli db:migrate",
    "migrate:test": "cross-env NODE_ENV=test npx sequelize-cli db:migrate",
    "db:backup": "node src/scripts/backup-database.js",
    "setup": "pnpm install && pnpm run migrate:status",
    "deploy": "pnpm run db:backup && pnpm run migrate:production && node src/server.js",
    "railway:deploy": "pnpm install && pnpm run setup-dirs && pnpm run migrate && node src/server.js",
    "railway:migrate": "cross-env NODE_ENV=production npx sequelize-cli db:migrate",
    "seed": "npx sequelize-cli db:seed:all",
    "seed:undo": "npx sequelize-cli db:seed:undo:all",
    "setup-dirs": "node -e \"['src/templates/emails','logs','uploads/audio','uploads/csv','src/migrations','src/seeders'].forEach(d => require('fs').mkdirSync(d, { recursive: true }))\""
  },
  "author": "JayLink SMS",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.9.0",
    "bcrypt": "^6.0.0",
    "bull": "^4.16.5",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.2",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "firebase-admin": "^13.4.0",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "http-errors": "^2.0.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "nodemailer": "^6.9.11",
    "reconnecting-websocket": "^4.4.0",
    "redis": "^5.0.1",
    "sequelize": "^6.35.2",
    "socket.io-client": "^4.8.1",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.3.3",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}